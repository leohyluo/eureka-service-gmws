<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ebm.gmws.user.mapper.UserMapper">
	<resultMap id="baseResult" type="com.ebm.gmws.pojo.domain.User">
		<id  property="id" column="id" jdbcType="BIGINT"/>
		<result property="uname" column="uname" jdbcType="VARCHAR"/>
		<result property="pwd" column="pwd" jdbcType="VARCHAR"/>
		<result property="name" column="name" jdbcType="VARCHAR"/>
		<result property="sex" column="sex" jdbcType="VARCHAR"/>
	</resultMap>
	
	<select id="listUser" resultMap="baseResult" parameterType="HashMap">
		select * from users
		<where>
			<if test="id != null">
				and id = #{id}
			</if>
		</where>
	</select>
	
	<update id="update" parameterMap="baseResult">
		update users set
		<if test="uname != null">
			uname = #{uname}
		</if>
		<if test="sex != null">
			sex = #{sex}
		</if>
		<where>
			<if test="id != null">
				and id = #{id}
			</if>
		</where>
	</update>
</mapper>